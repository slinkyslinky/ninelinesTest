mixin Mark(light, dark, stroke, small)
	if small
		svg.mark(width=16 height=16 viewBox="0 0 37 37" fill="none" xmlns="http://www.w3.org/2000/svg")
			rect(x="0.11517" y="18.5195" width=26 height=26 rx="6" transform="rotate(-45 0.11517 18.5195)" fill=`url(#mark${light})`)
			defs
				linearGradient(id=`mark${light}` x1="1" y1="1" x2="0" y2="0")
					stop(offset="50%" stop-color=dark)
					stop(offset="50%" stop-color=light)
	else
		svg.mark(width=40 height=40 viewBox="0 0 37 37" fill="none" xmlns="http://www.w3.org/2000/svg")
			rect(x="0.11517" y="18.5195" width=26 height=26 rx="6" transform="rotate(-45 0.11517 18.5195)" fill=`url(#mark${light})` stroke=stroke stroke-width="4")
			defs
				linearGradient(id=`mark${light}` x1="1" y1="1" x2="0" y2="0")
					stop(offset="50%" stop-color=dark)
					stop(offset="50%" stop-color=light)
