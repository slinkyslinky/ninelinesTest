mixin experienceItem(item)
	li.experience-item
		p.experience-item__date= item.date
		.experience-item__title

			h3= item.title
			each mark in item.marks
				+Mark(mark[0],mark[1], mark[2], true)
		.experience-item__company
			if item.companyIcon !== ''
				img.experience-item__company-icon(src= `${baseDir}images/${item.companyIcon}` alt=`${item.companyName} icon`)
			if item.companyName !== ''
				span.experience-item__company-name= `${item.companyName} `
			span= item.companyLocation
		p= item.description
		each link in item.links
			a.experience-item__link= link.name
